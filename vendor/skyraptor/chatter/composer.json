{
    "name": "skyraptor/chatter",
    "description": "A simple forum package for Laravel.",
    "authors": [
        {
            "name": "Tony Lea",
            "email": "tony@devdojo.com"
        },
        {
            "name": "Patrick Henninger",
            "email": "privat@skyraptor.eu"
        }
    ],
    "require": {
        "mews/purifier": "~3.2.2",
        "laravel/helpers": "^1.2"
    },
    "require-dev": {
        "illuminate/cache": "^6.0|^7.0",
        "illuminate/console": "^6.0|^7.0",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
	    "psr-4": {
	      "DevDojo\\Chatter\\": "/src"
		}
	},
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "DevDojo\\Chatter\\ChatterServiceProvider"
            ]
        }
    }
}
